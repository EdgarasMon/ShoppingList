<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="author" content="Edgaras" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" type="text/css" href="css/styles-index.css" />
		<title>dashboard</title>
	</head>
	<body>
		<div>
			<span>
				<h1 class="title">Shopping List</h1>
			</span>
			<span>
				<img
					class="cart_image"
					src="/pic/cart.png"
					width="50"
					height="50"
				/>
			</span>
			<div>
				<span> Hi <%= User %> </span>
				<form action="/logout"><button>Log Out</button></form>
			</div>
			<span>
				<nav role="navigation">
					<div id="menuToggle">
						<input type="checkbox" />
						<span></span>
						<span></span>
						<span></span>
						<ul id="menu">
							<a href="/My_Lists"><li>My Lists</li></a>
							<a href="/Products.html"><li>Products</li></a>
							<a href="#"><li>Expenses</li></a>
							<a href="#"><li>Graphs</li></a>
						</ul>
					</div>
				</nav>
			</span>
		</div>

		<div class="wrapper">
			<div class="container">
				<form id="fieldset1" method="post" action="/dashboard">
					<fieldset id="fieldset1">
						<legend>Enter product description</legend>
						<div class="elements1">
							<button>
								<input
									type="image"
									class="delete-image"
									type="button"
									src="/pic/delete2.png"
									id="clear"
								/>
							</button>
							<textarea
								id="first"
								name="first"
								placeholder=". . ."
								rows="3"
								cols="35"
							></textarea>
							<select id="Qty" name="Qty" size="3">
								<option value="1" selected="selected">
									1X
								</option>
								<option value="2">2X</option>
								<option value="3">3X</option>
								<option value="4">4X</option>
								<option value="5">5X</option>
								<option value="6">6X</option>
								<option value="7">7X</option>
								<option value="8">8X</option>
								<option value="9">9X</option>
								<option value="10">10X</option>
								<option value="more">more</option>
							</select>
							<input
								type="text"
								id="weight"
								name="weight"
								placeholder="weight"
								maxlength="5"
								size="3"
							/>
							<select id="units" name="units" size="3">
								<option value="Kg" selected="selected">
									Kg
								</option>
								<option value="Grams">Grams</option>
								<option value="Lb">LB</option>
							</select>
							<input
								type="text"
								id="price"
								name="price"
								placeholder="price"
								maxlength="5"
								size="3"
							/>
							<select id="currency" name="currency" size="3">
								<option value="€" selected="selected">
									&nbsp€&nbsp
								</option>
								<option value="$">&nbsp$&nbsp</option>
								<option value="£">&nbsp£</option>
							</select>
							<button id="add">
								<input
									type="image"
									class="add-image"
									alt="Submit"
									src="/pic/add2.png"
								/>
							</button>
						</div>
					</fieldset>
				</form>
			</div>

			<form>
				<fieldset id="fieldset2">
					<legend>Or search from database</legend>
					<div class="elements2">
						<button>
							<input
								type="image"
								class="delete-image"
								type="button"
								src="/pic/delete.png"
								width="23"
								height="23"
								id="clear"
							/>
						</button>
						<input
							id="third"
							type="text"
							class="textinput"
							placeholder=". . ."
							name="third"
							maxlength="100"
							size="66"
						/>
						<label for="Qty2"></label>
						<select id="Qty2">
							<option value="1">1</option>
							<option value="2">2</option>
							<option value="3">3</option>
							<option value="4">4</option>
							<option value="5">5</option>
							<option value="6">6</option>
							<option value="7">7</option>
							<option value="8">8</option>
							<option value="9">9</option>
							<option value="10">10</option>
							<option value="10+">10+</option>
						</select>
						<button id="add">
							<input
								type="image"
								class="add-image"
								alt="Submit"
								src="/pic/add.png"
								width="23"
								height="23"
							/>
						</button>
					</div>
				</fieldset>
			</form>

			<div class="container2" id="container2" style="display: none">
				<img class="paper" id="paper" src="pic/paper3.jpg" />
				<div id="list" class="top-left"></div>
				<div class="bottomButons">
					<form action="/dashboard" method="post">
						<textarea
							style="display: none"
							id="data2"
							name="data2"
						></textarea>
						<button id="save">Save</button>
						<button id="clear2">Clear</button>
						<button id="addPaper">+</button>
					</form>
				</div>
			</div>
			<img
				class="grocery"
				id="grocery"
				src="/pic/grocery.png"
				width="450"
				height="450"
			/>
		</div>
	</body>
	<script src="server.js"></script>
	<script src="frontend.js"></script>
</html>
